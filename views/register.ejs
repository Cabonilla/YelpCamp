<% include ./partials/header %>

<div class="row">
    <div class="col-md-12">
    <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please Sign Up!</h1>
            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" style="margin-bottom: 0px;" required>
            <br>
            <label for="inputfirstName" class="sr-only">First Name</label>
            <input type="text" id="inputfirstName" class="form-control" name="firstName" placeholder="First Name" required autofocus>
            <label for="inputlastName" class="sr-only">Last Name</label>
            <input type="text" id="inputlastName" class="form-control" name="lastName" placeholder="Last Name" required>
            <label for="inputEmail" class="sr-only">Email</label>
            <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required autofocus>
            <label for="inputAvatar" class="sr-only">Avatar URL</label>
            <br>
            <input type="text" id="inputAvatar" class="form-control" name="avatar" placeholder="Avatar URL" required>
            <label for="adminCode" class="sr-only">Admin Code</label>
            <input type="text" id="inputadminCode" class="form-control" name="adminCode" placeholder="Admin Code" style="margin-bottom: 10px" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
            </form>
            <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>
